{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">

    <section id="newsletter" class="newsletter padding-large no-padding-top">
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="image-holder">
                        <img src="images/introimg.png" alt="dancer" class="newsletter-image">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-content">
                        <div class="section-header">
                            <h2 class="section-title text-center mb-0">
                                <span class="text-primary">Sign In To</span> Get Connected
                            </h2>
                        </div>
                        <form id="form">
                            <label for="inputEmail">Email</label>
                            <input type="email" placeholder="Type Your Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control bg-light u-full-width" autocomplete="email"  autofocus>
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" placeholder="Type Your Password" id="inputPassword" class="form-control bg-light u-full-width" autocomplete="current-password" >

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            <div class="btn-submit align-center">
                                <button class="submit btn btn-pill btn-medium btn-primary btn-full" type="submit">Sign In</button>
                                <a href="register" class="button" class="btn btn-outline-secondary" >Create an Account</a>

                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if errorMessage %}
                                    <div class="alert alert-danger">{{ errorMessage }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                    </div>
                                {% endif %}
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>

</form>
{% endblock %}