{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<section id="newsletter" class="newsletter padding-large no-padding-top">
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-md-4">

            </div>
            <div class="col-md-6">
                <div class="form-content">
                    <div class="section-header">
                        <h2 class="section-title text-center mb-0">
                            <span class="text-primary">Welcome</span> To our familly
                        </h2>
                    </div>
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.email,) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.telephone) }}
                        {{ form_row(registrationForm.agreeTerms) }}
                        <div class="btn-submit align-center">
                            <button type="submit" class="submit btn btn-pill btn-medium btn-primary btn-full">Register</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
