{% extends 'base.html.twig' %}


{% block title %}Dance  {% endblock %}

 

{% block body %}
    <section class="hero-section jarallax light-content">
        <img src="images/hero-image1.jpg" class="jarallax-img">
        <div class="hero-content padding-xlarge">
            <div class="container">
                <div class="row">
                    <div class="content-light">
                        <h1 class="page-title text-uppercase">cour</h1>
                        <div class="breadcrumbs">
                            <span class="item">
                              <a href="index">Home /</a>
                            </span>
                            <span class="item">cour</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="post-wrap padding-large">
        <div class="container">
            <div class="row">
                <main class="post-list post-card-small">
                    {% for cour in cours %}
                        <div class="col-md-4">
                            <article class="post-item" style="max-height: 650px">
                                <div class="post-image zoom-effect" style="width: 100%; max-height: 250px;">
                                    <a class="container" href="">
                                        <img src="{{ asset('/img/' ~ cour.image) }}" alt="">
                                    </a>
                                </div>
                                <div class="post-content">
                                    <div class="meta-tags text-uppercase">
                                        <span class="post-category">the cour starts at {{ cour.date|date('Y-m-d') }}</span>
                                    </div>
                                    <h3 class="post-title">
                                        <a href="single-post.html" style="font-size: 30px">{{ cour.nom }} </a><br>
                                        By<span style="color:#8b2ccb"> {{ cour.Coach }}</span>
                                    </h3>
                                    <p class="clamp-4-lines">{{ cour.description }}</p>
                                    <a class="btn btn-primary" href="{{ path('app_details',{'id': cour.id} ) }}">Read
                                        More</a>
                                </div>

                            </article>
                        </div>
                        <style>
                            .clamp-4-lines {
                                display: -webkit-box;
                                -webkit-box-orient: vertical;
                                overflow: hidden;
                                -webkit-line-clamp: 3; /* DÃ©finit le nombre maximum de lignes */
                                text-overflow: ellipsis; /* Ajoute des points de suspension (...) en cas de troncature du texte */
                            }
                        </style>

                    {% endfor %}
                </main>
            </div>
        </div>
    </div>


    <nav class="navigation paging-navigation text-center padding-medium" role="navigation">
        <div class="pagination loop-pagination d-flex justify-content-center">
            <a href="#">
                <i class="icon icon-arrow-left"></i>
            </a>
            <span aria-current="page" class="page-numbers current">1</span>
            <a class="page-numbers" href="#">2</a>
            <a class="page-numbers" href="#">3</a>
            <a class="page-numbers" href="#">4</a>
            <a class="page-numbers" href="#">5</a>
            <a href="#">
                <i class="icon icon-arrow-right"></i>
            </a>
        </div>
    </nav>
    </main>
    </div>
    </div>
    </div>
