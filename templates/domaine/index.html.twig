{% extends 'base1.html.twig' %}

{% block title %}Domaine index{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h4 class="box-title">Domaines </h4>
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domaine in domaines %}
            <tr>
                <td>{{ domaine.id }}</td>
                <td>{{ domaine.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_domaine_show', {'id': domaine.id}) }}">show</a>
                    <a class="btn btn-danger" href="{{ path('app_domaine_edit', {'id': domaine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_domaine_new') }}">Create new</a>
{% endblock %}
