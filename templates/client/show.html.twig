{% extends 'base1.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ client.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ client.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ client.roles ? client.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ client.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ client.prenom }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ client.telephone }}</td>
        </tr>
        {#
        <tr>
           <th>IsVerified</th>
           <td>{{ client.isVerified ? 'Yes' : 'No' }}</td>
        </tr>
        #}

        </tbody>
    </table>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
