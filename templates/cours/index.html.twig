{% extends 'base1.html.twig' %}

{% block title %}Cours index{% endblock %}

{% block body %}


    <div class="card">
        <div class="card-body">
            <h4 class="box-title">Cours </h4>
        </div>

        <table class="table table-striped">
            <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Prix</th>
            <th>Nom</th>
            <th>Coach</th>
            <th>Image</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>

        {% for cour in cours %}
            <tr>

                <td>{{ cour.id }}</td>
                <td>{{ cour.date ? cour.date|date('Y-m-d') : '' }}</td>
                <td>{{ cour.prix }}</td>
                <td>{{ cour.nom }}</td>
                <td>{{ cour.getCoach() }}</td>
                <td>
                    <img style="width:100px" src="{{ asset('/img/' ~ cour.image) }}"></td>

                <td>
                    <a class="btn btn-primary" href="{{ path('app_cours_show', {'id': cour.id}) }}">show</a>
                    <a class="btn btn-success" href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>


    </table>
    <a class="btn btn-dark" href="{{ path('app_cours_new') }}">Create new</a>

    <!-- /.orders -->
{% endblock %}
